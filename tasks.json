{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current file",
            "type": "shell",
            "command": "zig",
            "args": [
                "cc",
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
